@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure Delete @Model.Name </h1>

<div asp-validation-summary="All"></div>

<form asp-action="Delete">

    @* <partial name="PartialViews/CreateEditPartialView" /> *@
    @if(Model.ImageName is not null)
    {
        <div class="form-group">
            <img src="~/Files/Images/@Model.ImageName" class="img-circle" height="40" width="40" alt="Employee Image" />
            <input asp-for="ImageName" hidden />
        </div>
    }
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input readonly class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input readonly class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input readonly class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input readonly class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input readonly class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input readonly class="form-control" asp-for="HireDate" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsActive" />
        <label readonly class="form-check-label" asp-for="IsActive">
        </label>
    </div>

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondry">Cancel</a>
</form>